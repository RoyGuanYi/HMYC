@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Modal.cshtml";
}

@section PluginsJS {
    <script src="~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/additional-methods.min.js"></script>
}

@model CharmMananger.Models.Role.CharmCommonRoleInfoDTO

<div class="container">
    @using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { @class = "J_FormValidate" }))
    {
        <div class="form form-horizontal">
            @Html.HiddenFor(d => d.RoleId)
            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>角色名称</label>
                <div class="col-xs-5">
                    @Html.TextBoxFor(p => p.RoleName, new { @class = "form-control required" })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>角色代码</label>
                <div class="col-xs-5">
                    @Html.TextBoxFor(p => p.RoleCode, new { @class = "form-control required" })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>启用</label>
                <div class="col-xs-5">
                    @Html.CheckBoxFor(p => p.IsEnable)
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>系统默认角色</label>
                <div class="col-xs-5">
                    @Html.CheckBoxFor(p => p.IsSysDefault)
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>

            <div class="form-group">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" value="保存" class="btn blue"><i class="fa fa-plus"></i>&nbsp;保存</button>
                </div>
            </div>
        </div>
    }
</div>
