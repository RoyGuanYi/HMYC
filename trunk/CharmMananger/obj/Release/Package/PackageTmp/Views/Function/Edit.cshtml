@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Modal.cshtml";
}

@section PluginsJS {
    <script src="~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/additional-methods.min.js"></script>
}

@model CharmMananger.Models.Role.CharmCommonActionInfoDTO

<div class="container">
    @using (Html.BeginForm("Edit", "Function", FormMethod.Post, new { @class = "J_FormValidate" }))
    {
        <div class="form form-horizontal">
            @Html.HiddenFor(d => d.ActionId)
            <div class="form-group">
                <label class="col-xs-3 control-label">分类名称</label>
                <div class="col-xs-5">
                    @Html.TextBoxFor(p => p.ActionCategoryName, new { @class = "form-control" })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>功能名称</label>
                <div class="col-xs-5">
                    @Html.TextBoxFor(p => p.ActionName, new { @class = "form-control required" })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>路径</label>
                <div class="col-xs-5">
                    @Html.TextBoxFor(p => p.ActionUrl, new { @class = "form-control required" })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>启用</label>
                <div class="col-xs-5">
                    @Html.CheckBoxFor(p => p.IsEnable)
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>可见</label>
                <div class="col-xs-5">
                    @Html.CheckBoxFor(p => p.IsVisible)
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>记录日志</label>
                <div class="col-xs-5">
                    @Html.CheckBoxFor(p => p.IsLog)
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>
            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>排序</label>
                <div class="col-xs-5">
                    @Html.TextBoxFor(p => p.Sort, new { @class = "form-control required", number = true })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>

            <div class="form-group">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" value="保存" class="btn blue"><i class="fa fa-plus"></i>&nbsp;保存</button>
                </div>
            </div>
        </div>
    }
</div>
