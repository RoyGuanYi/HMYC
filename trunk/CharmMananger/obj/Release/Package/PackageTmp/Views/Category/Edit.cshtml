





@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Modal.cshtml";
}

@section PluginsJS {
    <script src="~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/additional-methods.min.js"></script>
}


@model CharmMananger.Models.Business.CharmMstCategoryDTO

<div class="container">
    @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "J_FormValidate" }))
    {
        <div class="form form-horizontal">

            @Html.HiddenFor(d => d.Category_Id)		         


            <div class="form-group">
                <label class="col-xs-3 control-label"><i class="fa fa-asterisk required"></i>分类名称</label>
                <div class="col-xs-5">

                    @Html.TextBoxFor(p => p.Category_Name, new { @class = "form-control required" })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>


            <div class="form-group">
                <label class="col-xs-3 control-label">关键字</label>
                <div class="col-xs-5">

                    @Html.TextBoxFor(p => p.Keywords, new { @class = "form-control" })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>


            <div class="form-group">
                <label class="col-xs-3 control-label">分类备注</label>
                <div class="col-xs-5">

                    @Html.TextBoxFor(p => p.Category_Desc, new { @class = "form-control" })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>


            <div class="form-group">
                <label class="col-xs-3 control-label">父级ID</label>
                <div class="col-xs-5">

                    @Html.TextBoxFor(p => p.Parent_id, new { @class = "form-control", number = true })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>


            <div class="form-group">
                <label class="col-xs-3 control-label">排序</label>
                <div class="col-xs-5">

                    @Html.TextBoxFor(p => p.Sort_Order, new { @class = "form-control", number = true })
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>


            <div class="form-group">
                <label class="col-xs-3 control-label">是否显示</label>
                <div class="col-xs-5">

                    @Html.CheckBoxFor(p => p.Is_Show)
                </div>
                <label class="col-xs-4 help-inline J_ValidateMsg"></label>
            </div>


            <div class="form-group">
                <div class="col-xs-9 col-xs-offset-3">
                    <button type="submit" value="保存" class="btn blue"><i class="fa fa-plus"></i>&nbsp;保存</button>
                </div>
            </div>
        </div>
    }
</div>
